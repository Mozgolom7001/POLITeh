Перем мДокументОбъект Экспорт;

Процедура ОсновныеДействияФормыОК(Кнопка)

	СохранитьПараметры();

	Модифицированность = Ложь;

	Закрыть();

КонецПроцедуры // ОсновныеДействияФормыОК()

Процедура ПередЗакрытием(Отказ, СтандартнаяОбработка)

	Если Модифицированность Тогда
		Ответ = Вопрос("Данные были изменены. Сохранить изменения?", РежимДиалогаВопрос.ДаНетОтмена);
		Если Ответ = КодВозвратаДиалога.Да Тогда
			СохранитьПараметры();
		ИначеЕсли Ответ = КодВозвратаДиалога.Нет Тогда
		Иначе
			Отказ = Истина;
		КонецЕсли;
	КонецЕсли;

КонецПроцедуры // ПередЗакрытием()

Процедура ПередОткрытием(Отказ, СтандартнаяОбработка)

	НомерВходящегоДокументаЭлектронногоОбмена = мДокументОбъект.НомерВходящегоДокументаЭлектронногоОбмена;
	ДатаВходящегоДокументаЭлектронногоОбмена  = мДокументОбъект.ДатаВходящегоДокументаЭлектронногоОбмена;

КонецПроцедуры // ПередОткрытием()

// Процедура сохраняет введенные параметры.
//
Процедура СохранитьПараметры()

	мДокументОбъект.НомерВходящегоДокументаЭлектронногоОбмена = НомерВходящегоДокументаЭлектронногоОбмена;
	мДокументОбъект.ДатаВходящегоДокументаЭлектронногоОбмена  = ДатаВходящегоДокументаЭлектронногоОбмена;

КонецПроцедуры // СохранитьПараметры()
